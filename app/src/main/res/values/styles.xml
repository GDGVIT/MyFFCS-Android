<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_a200</item>
        <item name="colorPrimaryDark">@color/blue_a200</item>
        <item name="colorAccent">@color/blue_700</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:statusBarColor">@color/blue_a200</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">true</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="custom_spinner_style">
        <item name="android:showDividers">none</item>
        <item name="android:popupBackground">@drawable/custom_spinner_bg</item>
    </style>

</resources>
